<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    <referenceBlock name="footer_links">
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="contract_form_donnees" before="contract_form_cgv">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">Donnees</argument>
                <argument name="path" xsi:type="string">donnees</argument>
            </arguments>
        </block>
        <block class="Magento\Framework\View\Element\Html\Link\Current" name="contract_form_cgv" before="search-term-popular-link">
            <arguments>
                <argument name="label" xsi:type="string" translate="true">CGV</argument>
                <argument name="path" xsi:type="string">cgv</argument>
            </arguments>
        </block>
    </referenceBlock>
    </body>
</page>

<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Buttons configurations -->
    <virtualType name="Smile\Manifestation\Ui\Component\Control\Place\SaveSplitButton" type="Magento\Backend\Ui\Component\Control\SaveSplitButton">
        <arguments>
            <argument name="targetName" xsi:type="string">manifestation_place_form.manifestation_place_form</argument>
        </arguments>
    </virtualType>
    <virtualType name="Smile\Manifestation\Ui\Component\Control\Manifestation\SaveSplitButton" type="Magento\Backend\Ui\Component\Control\SaveSplitButton">
        <arguments>
            <argument name="targetName" xsi:type="string">manifestation_form.manifestation_form</argument>
        </arguments>
    </virtualType>
    <virtualType name="Smile\Manifestation\Ui\Component\Control\Manifestation\DeleteButton" type="Magento\Backend\Ui\Component\Control\DeleteButton">
        <arguments>
            <argument name="confirmationMessage" xsi:type="string" translatable="true">Are you sure you want to delete this manifestation?</argument>
            <argument name="idFieldName" xsi:type="const">Smile\Manifestation\Api\Data\ManifestationInterface::MANIFESTATION_ID</argument>
            <argument name="deleteRoutePath" xsi:type="string">*/*/delete</argument>
            <argument name="sortOrder" xsi:type="number">30</argument>
        </arguments>
    </virtualType>
</config>
